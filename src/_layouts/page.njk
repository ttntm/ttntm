---
layout: base.njk
---
<article id="content" class="container">
  {% if showProgress %}
    <aside class="progress-bar hide-no-js d-none d-lg-block">
      <div class="progress-bar__inner"></div>
    </aside>
  {% endif %}
  <h1 class="tight-md m0">{{ title }}</h1>
  <div class="hr shadow"></div>
  <div class="post">
    {{ content | safe }}
  </div>
</article>
