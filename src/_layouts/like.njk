---
layout: base.njk
---
<article class="container">
  <h1 class="h2 text-center tight">{{ title }}</h1>
  <p class="small text-center">
    Published: <time class="dt-published" datetime="{{ date | date('YYYY-MM-DD') }}">
      {{ date | date('MMMM DD, YYYY') }}
    </time>
  </p>
  <div class="hr shadow mt2 mb2"></div>
  <div class="post">
    {{ content | safe }}
  </div>
  <div class="hr shadow mt2 mb2"></div>
  <div class="text-center">
    <p class="small m0">Links <em>do not</em> open in new tabs.</p>
  </div>
  <div class="hr shadow mt2 mb2"></div>
  {% include "like.nextprev.njk" %}
</article>
