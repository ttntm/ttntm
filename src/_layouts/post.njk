---
layout: base.njk
---
<article class="container">
  <h1 class="">{{ title }}</h1>
  <p class="italic m0" style="font-size: 0.875rem;">Published: {{ date | date('MMMM DD, YYYY') }}</p>
  <div class="hr shadow"></div>
  <div class="post">
    {{ content | safe }}
  </div>
  <div class="hr shadow mt2 mb2"></div>
  {% replybtn title %}
  <div class="hr shadow mt2 mb2"></div>
  {% include "post.nextprev.njk" %}
</article>