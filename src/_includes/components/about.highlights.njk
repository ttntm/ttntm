<div id="highlights" class="mb2">
    <h2 class="h4">Recently Enjoyed</h2>
    <p>Highlights from recent media consumption.</p>
    <ul class="grid grid2 gap1 list-reset">
      {%- for h in site.highlights -%}
        <li class="flex align-items-center" style="gap: .5rem; padding-left: .5rem;">
          <img src="/img/icons/{{ h.img }}" alt="{{ h.title }}" width="28" style="margin: 2px 0;" eleventy:ignore>
          <span class="d-block">
            {%- if h.link -%}
              <a href="{{ h.link }}">{{ h.title }}</a>
            {%- else -%}
              {{ h.title }}
            {%- endif -%}
          </span>
        </li>
      {%- endfor -%}
    </ul>
</div>
