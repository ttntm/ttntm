{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(site.url) }}{%- endset -%}

<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="preload" href="/css/page.css" as="style">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="author" content="{{ site.author }}">
<meta name="robots" content="index,follow">
<meta name="description" content="{{ description or site.description }}">
<title>{% if title %}{{ title }}{% else %}Tom's Journal{% endif %} - ttntm.me</title>
<link rel="canonical" href="{{ absolutePageUrl }}">

<link rel="manifest" href="/site.webmanifest">
<meta name="theme-color" content="#fff">
<link rel="icon" type="image/png" sizes="384x384" href="/img/favicon/android-chrome-384x384.png">
<link rel="icon" type="image/png" sizes="192x192" href="/img/favicon/android-chrome-192x192.png">
<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
<link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-180x180-solid.png">
<link rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#5bbad5">
<meta name="masapplication-config" content="/browserconfig.xml">
<meta name="google-site-verification" content="xnb1OPOcw77ws6qsMtbTNh6CVyT4H0hPq1JPimFDwyI" />

<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/page.css">

{# Open Graph #}
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title or site.title }}">
<meta property="og:description" content="{{ description  or site.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta name="twitter:card" content="{% if image -%}summary_large_image{% else %}summary{% endif %}">
{%- if image -%}
  <meta property="og:image" content="{{ image | url | absoluteUrl(site.url) }}">
{% else %}
  <meta property="og:image" content="/img/ttntm.jpg">
{%- endif -%}

{# RSS Feed #}
<link type="application/atom+xml" rel="alternate" href="{{ site.url }}/feed.xml" title="{{ site.title }}">