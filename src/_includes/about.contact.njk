{% for icon in site.social %}
  <li class="d-block">
    <a class="d-block no-underline" href="{{ icon.url }}" target="_blank" rel="noreferrer" style="border: 0; margin: 1rem 1.5rem;">
      <img src="/img/icons/{{ icon.img }}" class="icon hover-scale" alt="{{ icon.title }}" title="{{ icon.title }}" width="32">
    </a>
  </li>
{% endfor %}