---
title: All Tags
permalink: /tags/
layout: base.njk
---
<section class="container h-feed text-center post">
  <h1 class="p-name tight">{{ title }}</h1>
  <div class="hr shadow mt2 mb2"></div>
  <ul class="list-reset grid grid3 gap1 mt2">
    {% for tag in collections.blog | getCollectionTags | sort %}
      {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li class="d-block">
        <a class="d-block w100 u-url p-name like-link shadow-md-hover no-underline px2 py1 mx-auto" href="{{ tagUrl }}" style="border: 1px solid var(--border);">
          <span>
            <span class="small">#</span>{{ tag }}
          </span>
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
